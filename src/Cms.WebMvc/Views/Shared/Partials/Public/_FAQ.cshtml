@using Cms.Infrastructure.Persistence.Entities
@{
  List<FAQ> faqs = ViewData["FAQs"] as List<FAQ>;
}
<div class="container" data-aos="fade-up">

        <div class="section-title">
          <h2>CÁC CÂU HỎI THƯỜNG GẶP</h2>
          <p>Các thông tin bên dưới có thể giải đáp các thắc mắc thường gặp của khách hàng.</p>
        </div>

        <div class="faq-list">
          <ul>
            @for (int i = 0; i < faqs.Count(); i++)
            {
              <li data-aos="fade-up" data-aos-delay="500">
                <i class="bx bx-help-circle icon-help"></i> <a data-bs-toggle="collapse" data-bs-target="#faq-list-@i" class="collapsed">@faqs[i].Question <i class="bx bx-chevron-down icon-show"></i><i class="bx bx-chevron-up icon-close"></i></a>
                <div id="faq-list-@i" class="collapse" data-bs-parent=".faq-list">
                  <p>@faqs[i].Answer</p>
                </div>
              </li>
            }
            
            

          </ul>
        </div>

      </div>