@model List<HomeInfoDto>
@{
    ViewData["Title"] = "Trang chủ";
}

<div class="row">

  @foreach (var homeInfoDto in Model)
  {
    <div class="col-lg-6">
      <div class="member d-flex align-items-start" data-aos="zoom-in" data-aos-delay="100">
        <div class="pic"><img src="@homeInfoDto.ImageUrl" class="img-fluid" alt=""></div>
        <div class="member-info">
          <h4><a href="/Post/Detail/@homeInfoDto.DetailSlug">@Html.Raw(@homeInfoDto.Title)</a></h4>
          <span>Tin Thám Tử</span>
          @Html.Raw(homeInfoDto.Content)
          <div class="social">
            <a href=""><i class="ri-twitter-fill"></i></a>
            <a href=""><i class="ri-facebook-fill"></i></a>
            <a href=""><i class="ri-instagram-fill"></i></a>
            <a href=""> <i class="ri-linkedin-box-fill"></i> </a>
          </div>
        </div>
      </div>
    </div>
  }
  
