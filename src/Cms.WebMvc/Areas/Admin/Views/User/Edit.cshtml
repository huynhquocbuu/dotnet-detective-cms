@model UserDto
@{
    ViewData["Title"] = "Edit User Page";
    Layout = "_AdminLayout";
}

    
    <form method="post">
        <h4 class="tx-bold">Cập nhật User</h4>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input asp-for="Id" type="hidden" class="form-control">
        <div class="form-row">
            <div class="form-group col-md-3">
                <label class="tx-bold"  asp-for="Username"></label>
                <input asp-for="Username" class="form-control" readonly>
            </div>
            <div class="form-group col-md-3">
                <label class="tx-bold" asp-for="FullName"></label>
                <input asp-for="FullName" class="form-control">
            </div>
            <div class="form-group col-md-3">
                <label class="tx-bold"  asp-for="Password">New Password</label>
                <input asp-for="Password" class="form-control">
            </div>
        </div>

        <br>
        <div class="form-row">
            <div class="form-group col-md-2">
                <input type="submit" value="Submit" class="form-control btn btn-primary">
            </div>
            
        </div>


    </form>
