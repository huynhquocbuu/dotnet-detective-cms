@model List<Cms.Application.Admin.Models.Post.TagDto>
@{
    Layout = "_AdminLayout";
    
}

    <h4>Quản lý thẻ</h4>
    <div class="row">

        <div class="table-responsive">
            <table class="table">
                <thead>
                <tr>
                    <th scope="col"><a href="/Admin/Tag/Add" class="text-primary"><i data-feather="plus-circle"></i> Thêm</a></th>
                    <th scope="col">Title</th>
                    <th scope="col">Slug</th>
                </tr>
                </thead>

                <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <a class="text-primary" href="/Admin/Tag/Edit/@item.Id"><i data-feather="edit"></i> Sửa</a> 
                            <a class="text-danger" href="/Admin/Tag/Delete/@item.Id"> <i data-feather="delete"></i> Xoá</a>
                        </td>
                        <td>@item.Title</td>
                        <td>@item.Slug</td>
                    </tr>
                }


                </tbody>

            </table>
        </div>

    </div>