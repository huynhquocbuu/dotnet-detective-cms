
@{
    Layout = "_AdminLayout";
}

<div class="container-fluid">
    <h4 class="tx-bold">File Manager</h4>
    <div id="filemanager"></div>
</div>


@section Scripts {
    <script>
    
    // ------------------------------Document Ready---------------
    $(document).ready(function () {
        $("#filemanager")
        .kendoFileManager(
            {
                dataSource: {
                    schema: kendo.data.schemas.filemanager,
                    transport: {
                        read: {
                            //url: "https://demos.telerik.com/kendo-ui/service/FileManager/Read",
                            url: "/Api/FileManager/Read",
                            method: "POST"
                        },
                        create: {
                            //url: "https://demos.telerik.com/kendo-ui/service/FileManager/Create",
                            url: "/Api/FileManager/Create",
                            method: "POST"
                        },
                        update: {
                            //url: "https://demos.telerik.com/kendo-ui/service/FileManager/Update",
                            url: "/Api/FileManager/Update",
                            method: "POST"
                        },
                        destroy: {
                            //url: "https://demos.telerik.com/kendo-ui/service/FileManager/Destroy",
                            url: "/Api/FileManager/Destroy",
                            method: "POST"
                        }
                    }
                },
                //uploadUrl: "https://demos.telerik.com/kendo-ui/service/FileManager/Upload",
                uploadUrl: "/Api/FileManager/Upload",
                toolbar: {
                    items: [
                        { name: "createFolder" },
                        { name: "upload" },
                        { name: "sortDirection" },
                        { name: "sortField" },
                        { name: "changeView" },
                        { name: "spacer" },
                        { name: "details" },
                        { name: "search" }
                    ]
                },
                contextMenu: {
                    items: [
                        { name: "rename" },
                        { name: "delete" }
                    ]
                },
                draggable: true,
                resizable: true
            });
    });
    // ------------------------------Document Ready---------------
    </script>
}