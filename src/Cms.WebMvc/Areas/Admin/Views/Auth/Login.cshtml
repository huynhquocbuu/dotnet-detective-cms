@model Cms.Application.Admin.Models.Auth.LoginDto
@{
    Layout = "_AuthLayout";
    ViewBag.Title = "title";
}

<form class="w-100" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <h3 class="tx-color-01 mg-b-5">Login</h3>
    <p class="tx-color-03 tx-16 mg-b-30">Please login to continue.</p>

    <div class="form-group">
        <label class="tx-bold" asp-for="Username"></label>
        <input asp-for="Username" class="form-control" placeholder="Enter your username">
        <span asp-validation-for="Username" class="text-danger"></span>
    </div>
    <div class="form-group">
        <div class="d-flex justify-content-between mg-b-5">
            <label asp-for="Password" class="mg-b-0-f tx-bold"></label>
            <a href="/Auth/ForgotPasssword" class="tx-13">Forgot password?</a>
        </div>
        <input type="password" asp-for="Password" class="form-control" placeholder="Enter your password">
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>

    <div class="form-group">
        <div class="custom-control custom-checkbox">
            <input type="checkbox" class="custom-control-input" asp-for="RememberMe">
            <label class="custom-control-label" asp-for="RememberMe">Remember me</label>
            
        </div>
        
    </div>

    <button type="submit" class="btn btn-brand-02 btn-block">Log In</button>
    <div class="divider-text">or</div>
                  
    <div class="tx-13 mg-t-20 tx-center">Don't have an account? <a href="/Auth/Register">Create an Account</a></div>
</form>
  

@section Scripts {
    <script>
          function toggle_password() {
            var passwordElement = document.getElementById("Password");
            if (passwordElement.type === "password") {
              passwordElement.type = "text";
            }else{
              passwordElement.type = "password";
            }
          }
    </script>
}


 